    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/src/manage.py"
        },
        {
            "name": "Python: Remote Attach to Docker Test",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost", // หรือ 0.0.0.0
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src", // Path ไปยัง source code บนเครื่องของคุณ
                    "remoteRoot": "/app/src" // Path ไปยัง source code ใน Docker container (ตรงกับ working_dir และ volumes)
                }
            ],
            "justMyCode": true // หรือ false ถ้าต้องการ debug เข้าไปใน library code
        }
    ]
}